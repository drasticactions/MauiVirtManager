<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:local="clr-namespace:MauiVirtManager"
             x:Class="MauiVirtManager.App"
             xmlns:converters="clr-namespace:MauiVirtManager.Tools.Converters"
             windows:Application.ImageDirectory="Assets">
    <Application.Resources>
        <ResourceDictionary>
            <converters:DomainStateConverter x:Key="DomainStateConverter" />
            <converters:DomainStateImageConverter x:Key="DomainStateImageConverter"/>
            <converters:DomainScreenshotImageConverter x:Key="DomainScreenshotImageConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
